        <label for="">Movie Type:</label>
        <input type="text" name="type" required>

        <button type="submit">Add</button>
        

    </form>

   
    </table>
      </div>

      <div class="image-container">
        
            <% data.map((e,i)=>{ %>
                
                <div class="image-cell">
                    <img src="/<%= e.image %>" alt="Movie Image" class="movie-image" width="100">

                   
                    <p><strong>Name:</strong> <%= e.name %></p>
                    <p><strong>Type:</strong> <%= e.type %></p>

                    

                    <div class="button">
                     <a href="/edit?id=<%=e.id%>"><button id="edit">Edit</button></a>
                     <a href="/delete?id=<%=e.id%>"><button id="del">Delete</button></a>
                    </div>
                </div>

            <%  }) %>
        
            
    



    </div>


   
    
