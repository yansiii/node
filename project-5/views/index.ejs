    }

    .input-container input {
        width: 600px;
        height: 30px;
        padding-left: 30px; 
        border: 1px solid rgb(205, 197, 224);
        font-size: 16px;
        margin-top: 4%;
    }

    nav button{
        width: 80px;
        height: 30px;
        background-color: rgb(240, 43, 43);
        color: white;
        margin-left: 15%;
        border: none;
        margin-top: 50px;
        border-radius: 5px;
    }

    nav .iconmenu{
        margin-left: 40px;
        margin-top: 50px;
    }

    .iconmenu i{
       font-size: 30px;
    }

    .navbody{
        background-color: rgb(245,245,245);
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid rgb(205, 197, 224);;
    }

    .navlinks{
        display: flex;
        gap: 30px;
        padding: 10px;
       
    }
    .navlinks2{
        display: flex;
        gap: 30px;
        padding: 10px;
       
    }
    a{
        text-decoration: none;
        color: rgb(41, 38, 38);
    }
    .part1{
        display: flex;
        justify-content:space-between;
        padding-left: 20px;
        padding-right: 20px;
    }

    .part1 button{
        width: 80px;
        height: 30px;
        background-color: rgb(240, 43, 43);
        color: white;
        border: none;
        border-radius: 5px;
        margin-top: 25px;
    }

    .mainpart{
        background-color: rgb(245,245,245); 
    }

    .image-container {
    display: flex;
    flex-wrap: wrap; 
    gap: 10px; 
}

.image-cell {
    flex: 0 0 23%; 
    padding: 5px;
    box-sizing: border-box;
}

.movie-image {
    width: 100%;
    height: auto;
    display: block;
}

.button{
    width: 300px;
    height: 30px;
    background-color: rgb(218, 210, 228);
    display: flex;
    justify-content: end;
    gap: 10px;
    padding: 5px;
}

#edit{
    background-color: rgb(152, 152, 255);
    border: none;
    width: 100px;
    height: 30px;
}



#del{
    background-color: rgb(243, 61, 61);
    color: white;
    border: none;
    width: 100px;
    height: 30px;
}
 
</style>


